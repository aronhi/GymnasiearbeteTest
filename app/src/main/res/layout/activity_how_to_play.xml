<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_how_to_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ah980627.gymnasiearbetetest.HowToPlayActivity"
    tools:background="@drawable/background1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1">

        <TextView
            android:text="Hur spelar man?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:id="@+id/textView"
            android:textColor="@android:color/background_light"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:textAlignment="center" />

        <TextView
            android:text="@string/HowtoplayText"
            android:layout_width="match_parent"
            android:id="@+id/textView6"
            android:layout_height="300dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp"
            android:textColor="@android:color/background_light"
            android:textSize="27sp"
            android:background="@android:color/transparent"
            android:textAlignment="center" />
    </RelativeLayout>
</LinearLayout>
